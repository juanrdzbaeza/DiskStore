extends layout

block content
  #banner.page-header
    .row
      .col-lg-6
        h1= title
  
  .row
    .col-xs-12.col-sm-8
      .row.list-group
        each disk in disks
          br
          div(align="center")
            a(href="#")
              .col-xs-12.list-group-item
                img(src=disk.image_url, alt="", style="width:100px; height:100px;")
                h3= disk.title
