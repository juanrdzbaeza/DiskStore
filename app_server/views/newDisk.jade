extends layout

block content
  #banner.page-header

  .row
    .col-xs-12.col-sm-12
      .row
        .col-xs-12.col-md-12
          form.form-horizontal(action="/", method="get  tiene que ser post     ", role="form")
            .form-group
              label.col-xs-10.col-sm-2.control-label(for="name") Title
              br
              .col-xs-12.col-sm-10
                input#name.form-control(name="title" placeholder="title of the disk")
              
              label.col-xs-10.col-sm-2.control-label(for="name") Genre
              br
              .col-xs-12.col-sm-10
                input#name.form-control(name="genre" placeholder="genre of the disk")
              
              label.col-xs-10.col-sm-2.control-label(for="name") Artist
              br
              .col-xs-12.col-sm-10
                input#name.form-control(name="artist" placeholder="artist of the disk")



            .form-group
              label.col-xs-10.col-sm-2.control-label(for="rating") Songs of the Disk
              br
              .col-xs-12.col-sm-5
                h3 Side A
                input#name.form-control(name="song1" placeholder="Song 1")
                input#name.form-control(name="song2" placeholder="Song 2")
                input#name.form-control(name="song3" placeholder="Song 3")
                input#name.form-control(name="song4" placeholder="Song 4")
                input#name.form-control(name="song5" placeholder="Song 5")
                input#name.form-control(name="song6" placeholder="Song 6")
              
              .col-xs-12.col-sm-5
                h3 Side B
                input#name.form-control(name="song7" placeholder="Song 7")
                input#name.form-control(name="song8" placeholder="Song 8")
                input#name.form-control(name="song9" placeholder="Song 9")
                input#name.form-control(name="song10" placeholder="Song 10")
                input#name.form-control(name="song11" placeholder="Song 11")
                input#name.form-control(name="song12" placeholder="Song 12")

            .form-group
              label.col-sm-2.control-label(for="Description") Description
              br
              .col-sm-10
                textarea#review.form-control(name="description", rows="5")
              
              label.col-sm-2.control-label(for="image_url") URL image
              br
              .col-sm-10
                textarea#review.form-control(name="image_url", rows="1" placeholder="URL for de image")
            button.btn.btn-default.pull-right Add new disk
